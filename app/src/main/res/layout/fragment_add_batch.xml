<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AddBatchFragment">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        tools:context=".Admin.AddBatchFragment">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:padding="24dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Batch"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/batch_name"

                    android:layout_marginTop="40dp"
                    android:padding="8dp"
                    android:hint="Batch Name"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/year"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Year"
                    android:inputType="textPassword"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/sem"
                    android:layout_marginTop="20dp"
                    android:padding="8dp"
                    android:hint="Semester"
                    android:inputType="textPassword"
                    android:drawablePadding="8dp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_marginTop="40dp"
                    android:drawablePadding="8dp"
                    android:hint="Add Section Eg: A,B"

                    android:padding="8dp"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/addsection"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:text="Add Section" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Add Batch"
                    android:id="@+id/addbatch"
                    android:textSize="18sp"
                    android:layout_marginTop="30dp"
                    app:cornerRadius = "20dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>